<div class="ml-5">
  <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :graduating_class %>
      <%= f.text_field :graduating_class, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'file-input w-full max-w-xs m-4', accept: 'image/*' %>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class='mt-3 mb-3'>
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url,
                      class: 'rounded-circle',
                      id: 'preview',
                      size: '100x100' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :role %>
      <%= f.select :role, User.roles.invert, {}, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>